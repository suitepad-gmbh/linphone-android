<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.suitepad.linbridge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".app.BridgeApplication"
        tools:ignore="GoogleAppIndexingWarning">

        <service android:name=".bridge.BridgeService"
            android:exported="true"
            android:enabled="true">

            <intent-filter>
                <action android:name="de.suitepad.linbridge.bridge.BridgeService.ACTION_START_SERVICE"/>
                <action android:name="de.suitepad.linbridge.bridge.BridgeService.ACTION_STOP_SERVICE"/>
            </intent-filter>

        </service>

    </application>
</manifest>
